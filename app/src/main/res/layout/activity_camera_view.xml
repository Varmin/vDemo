<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".henCoder.CustomViewActivity">

    <com.varmin.vdemo.view.FlipView
        android:id="@+id/view_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.varmin.vdemo.view.MaterialEditText
        android:id="@+id/met_edit"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="say 666"
        android:background="@color/base_app_alert_bg"/>
    <com.varmin.vdemo.view.LableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:background="@color/base_app_alert_bg"
        android:text="我是 TAG 206974"/>
    <!--android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:round_radius="3dp"-->
    <com.varmin.vdemo.view.LableView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="我是 TAG 206974"
        android:textSize="20sp"
        android:textColor="@color/base_text_black_666666"
        />
</LinearLayout>