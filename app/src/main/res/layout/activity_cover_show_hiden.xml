<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CoverShowHidenActivity">

    <FrameLayout
        android:id="@+id/fl_cover_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cover_show"
            style="@style/base_button_hor"
            android:text="show_1" />

        <Button
            android:id="@+id/btn_cover_show2"
            style="@style/base_button_hor"
            android:text="show_2" />
        <ToggleButton
            android:id="@+id/tb_toogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="销毁重叠处理"
            android:textOff="当前销毁重叠"/>
    </LinearLayout>
</LinearLayout>